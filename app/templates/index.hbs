<PageTitle>
  Top 20
</PageTitle>
<div class="layout layout-wrap flex">
  {{#each this.model as |game|}}
    <div class="flex-100 flex-gt-xs-50 flex-gt-sm-25 layout">
      {{#paper-card as |card|}}
        {{#link-to "games" game.id}}
          {{card.image class="img-responsive" src=game.thumbnail alt=game.name}}
          {{#card.title as |title|}}
            {{#title.text as |text|}}
              {{#text.headline class="word-break text-align-center"}}{{game.name}}{{/text.headline}}
            {{/title.text}}
          {{/card.title}}
        {{/link-to}}
      {{/paper-card}}
    </div>
  {{/each}}
</div>
{{outlet}}